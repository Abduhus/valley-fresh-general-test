{
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "declaration": false,
    "removeComments": true
  },
  "include": [
    "server/index.ts",
    "server/routes.ts",
    "server/storage.ts",
    "server/vite.ts",
    "shared/schema.ts"
  ]
}